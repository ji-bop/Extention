{% extends "layout.njk" %}
{% import 'parts/card.njk' as cards %}
{% block content %}
    {% call cards.render('Meus An√∫ncios', 'users-ads container') %}
    <div class="items">
        {% for product in products %}
            <div class="item">
                <div class="image" style='background-image: url({{ product.img }})'></div>
            </div>
            <div class="info">
                <div class="title">{{ product.name }}</div>
                <div class="price">{{ product.formattedPrice }}</div>
                <div class="published">{{ product.formattedCreate }}</div>
                <div class="actions">
                    <a href="/products/{{ product.id }}/edit">Editar</a>
                    <a href="/products/{{ product.id }}">ver</a>
                </div>
            </div>
        {% endfor %}
    </div>
    {% endcall %}
{% endblock content %}